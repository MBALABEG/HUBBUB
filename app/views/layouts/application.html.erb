<!DOCTYPE html>
<html>
<head>
  <title>HUBBUB</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">

	<div class="row topbar">
		<div class="col-sm-2"><%= link_to "Hubbub", '/' %></div>
    		<div class="col-sm-2 col-sm-offset-6">
    		<% if current_user %>        
    			<%= link_to "Sign Out", "/logout" %>
    		<% else %>
    			<%= link_to "Sign Up", '/signup' %>
			<% end %>
			</div>
	    <div class="col-sm-2">
		    <% if current_user %> <!-- if a user is logged in, the nav bar hides buttons -->
			Welcome, <%= current_user.name %>
			<% else %>
		    <%= link_to "Log In", '/sessions/login' %>
		    <% end %>

	    </div>
	</div>
			<%= yield %>
</div>
</body>
</html>
